package Questao6;

import java.util.Scanner;

public class Qst {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		for (float i = 1 ; i<=3 ; i++) {
			
			System.out.println("Quanto você ganha por horas? ");
			Scanner valor1 =  new Scanner (System.in);
			
			
			else if  (i< 3) {
			System.out.println("quantos horas trabalha por dia? ");
			Scanner valor2 =  new Scanner (System.in);
			}
			else if  (i==3) {
			System.out.println("quantas dia da semana trabalha? ");
			Scanner valor3 =  new Scanner (System.in);
			}
			
			
			float n1 = valor1.nextFloat();
			float n2 = valor1.nextFloat();
			float n3 = valor1.nextFloat();
			
			System.out.println("o salario do seu mês é : " + (n1 * n2) * n3);
	}

}
	}
